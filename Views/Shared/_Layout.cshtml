@inject IHttpContextAccessor context;
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="~/css/csslayout2.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <title>Evo-energy</title>
</head>

<body>
    <div id="scrollable-content">
        <div class="wrappershared">
            <nav class="nav">
                <div class="nav-logo">
                    <p> Evo-energy</p>
                </div>
                <div class="nav-menu" id="navMenu">
                    <ul>
                        @if ( context.HttpContext.Session.GetString("mat") != null)
                        {
                            <li><a href="@Url.Action("Index", "Home")" class="link">Home</a></li>
                            <li><a href="@Url.Action("produitView", "produits")" class="link">Ajouter produit</a></li>
                            <li><a href="@Url.Action("ServiceView", "Services")" class="link">Ajouter Service</a></li>
                            <li><a href="@Url.Action("listeproduit", "produits")" class="link">Produits</a></li>
                            <li><a href="@Url.Action("EntrepriseView", "Entreprises")" class="link">Entreprises</a></li>
                            <li><a href="@Url.Action("about1","Home")" class="link">à propos</a></li>
                            <li><a href="@Url.Action("profil","Home")" class="link">Profil</a></li>
                        }

                        else
                       
                       
                        {
                            <li><a href="@Url.Action("Index", "Home")" class="link">Home</a></li>
                            <li><a href="@Url.Action("listeproduit", "produits")" class="link">Produits</a></li>
                            <li><a href="@Url.Action("EntrepriseView", "Entreprises")" class="link">Entreprises</a></li>
                            <li><a href="@Url.Action("feedback", "Home")" class="feed">Ajouter un avis</a></li>
                            <li><a href="@Url.Action("about1","Home")" class="link">À propos</a></li>
                          
                        }
                        
                       
                        
                    </ul>
                </div>               
               <div class="nav-button">
                @if (context.HttpContext.Session.GetString("UserEmail")!=null)
                {
                        <p5>@context.HttpContext.Session.GetString("UserEmail")</p5>
                    <a href="@Url.Action("Logout")" class="btn btn-primary">Déconnexion</a>
                }
                else
                { 
                    <input type="submit" id="loginBtn" onclick="redirectToLogin()" class="button-46" value="Connexion"> 
                    <input type="submit" id="registerBtn" onclick="redirectToRegister()" class="button-46" value="S'inscrire" >
                }
                    </div>
                </div>
               
            </nav>
        </div>
    </div>

    <!-- JavaScript files -->
    <script src="~/js/test.js"></script>
    <script src="~/js/login register.js"></script>
    <script>
        function myMenuFunction() {
            var i = document.getElementById("navMenu");

            if (i.className === "nav-menu") {
                i.className += " responsive";
            } else {
                i.className = "nav-menu";
            }
        }
        function redirectToLogin() {
            window.location.href = '@Url.Action("LoginUser", "Users")';
        }

        function redirectToRegister() {
            window.location.href = '@Url.Action("RegisterUser", "Users")';
        }
    </script>
</body>

</html>

@RenderSection("styles", required: false) <!-- Additional styles from views -->
@RenderBody() <!-- Main content from views -->
@RenderSection("scripts", required: false) <!-- Additional scripts from views -->